{
  "name": "sample",
  "version": "0.2.0",
  "scripts": {
    "dev": "vite",
    "dev:open": "vite --open",
    "build": "npm run clean && vite build",
    "preview": "vite preview",
    "preview:open": "vite preview --open",
    "clean": "rm -rf dist",
    "assets:check": "node scripts/check-assets.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:types": "tsc --noEmit -p tsconfig.vite.json",
    "prepare": "husky install",
    "check": "npm run assets:check && npm run lint && npm run lint:types && npm run build",
    "test:smoke": "npm run test:smoke:docker",
    "test:smoke:local": "npm run build && node scripts/run-smoke.js preview",
    "test:smoke:dev": "node scripts/run-smoke.js dev",
    "test:ui": "npx playwright test --ui",
    "test:smoke:docker": "docker run --rm --shm-size=1gb -e CI=1 -v \"$PWD\":/work -w /work mcr.microsoft.com/playwright:v1.58.1-jammy bash -lc \"npm ci --ignore-scripts --no-fund --no-audit && npm run test:smoke:local\""
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@playwright/test": "1.58.1",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "playwright": "1.58.1",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "vite": "6.4.1"
  },
  "dependencies": {
    "phaser": "2.6.2"
  }
}
